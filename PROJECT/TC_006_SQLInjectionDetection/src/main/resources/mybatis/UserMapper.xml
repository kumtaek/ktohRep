<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.security.UserMapper">

    <!-- SQL Injection 취약점 예시: ${...} 사용 -->
    <select id="findUserByDynamicColumn" resultType="map">
        SELECT ID, USERNAME, EMAIL
        FROM USERS
        WHERE ${columnName} = #{value}
    </select>

    <!-- 안전한 SQL 예시: #{} 사용 -->
    <select id="findUserSafely" resultType="map">
        SELECT ID, USERNAME, EMAIL
        FROM USERS
        WHERE USERNAME = #{value}
    </select>

</mapper>